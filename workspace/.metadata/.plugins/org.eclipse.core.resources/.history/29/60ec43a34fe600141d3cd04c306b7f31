                      println("Introduzca Nombre")
                      var Nomb=readLine 
                      println("Introduzca Direccion")
                      var Dir=readLine
                      println("Introduzca Telefono")
                      var Tel=readInt 
                      listclient(contclient)=new Cliente (DNI,Nomb,Dir,Tel)
                      contclient +=1
                    case 2  => 
                      if (contclient==0) println ("No es posible mostrar clientes porque no hay ninguno registrado")
                      else for (i <- 0 to contclient) println ("\nCliente " + i + listclient(i))
                    case 3  =>null
                    case default=> println("Unexpected case")
                  }
                  }while (menupeq<0&&menupeq>3) 
            case 3  => 
              
                  do {
                  println ("Escoja una opcion")
                  println ("1     Registrar una opcion")
                  println ("2     Registrar un modelo") 
                  println ("3     Registrar un auto nuevo") 
                  println ("4     Registrar un auto usado")
                  println ("5     Mostrar opciones registradas")
                  println ("6     Mostrar modelos registrados")
                  println ("7     Mostrar autos nuevos")
                  println ("0     Salir")
                  menupeq=readInt
                  menupeq match{
                    case 1 => 
                      println ("Como se llama la opcion " + contop+1)
                      var n=readLine
                      println ("Proporciona la descripcion del modelo")
                      var d=readLine
                      println ("Cual es el valor de esta opcion ")
                      var co=readInt
                      listop(contop)=new Opcion_Modelo (n,d,co)
                      contop+=1
                    case 2  => 
                      println ("Cual es la marca")
                      var n=readLine
                      println ("Proporciona el modelo(aÃ±o)")
                      var d=readInt
                      println ("Cual es la cilindrada")
                      var co=readInt
                      listmod(contmod)=new Modelo (n,d,co)
                      contmod+=1
                    case 3 =>
                      if (contmod==0&&contop==0) println ("No se puede registrar un auto sin tener modelos u opciones disponibles")
                      else (
                          println ("Cual es la matricula")
                          var mat=readLine
                          println ("Proporciona el costo")
                          var d=readInt
                          println ("Cual es la color")
                          var co=readline
                          println("Que modelo es")
                          var mo=readInt
                          println("Que opciones tiene")
                          var op=readInt
                          listmod(contmod)=new Nuevo (n,d,co)
                          contmod+=1
                          )
                      var mat =0
                      
                      
                      mat=11+1+1+1+1+1+1+
                      println(mat)
                      
                      
                      
                      
                      
                     
                  }
                  }while (menupeq<0&&menupeq>8)
                   
                    
                    
                    
                    
                    
            case 4  => println("April")
            case 5  => println("May")
            case 6  => null
  
  // catch the default with a variable so you can print it
            case whoa  => println("Unexpected case: " + whoa.toString)
        
    }
    menugrande=0
      }while (menugrande<0&&menugrande>5)
    
    var litsa_opciones_modelo = new Array[Opcion_Modelo](100)
        
    val a1=new Nuevo ("verde", "TVB-2018", 250000)
   
    val a2=new Opcion_Modelo ("chevy 98","Sin AA, Pintura al horno, Sistema manual, Direccion Manual", 3000)
    println ("la opcion " + litsa_opciones_modelo(0).Nombre_Opcion + " tiene un coste de "+ litsa_opciones_modelo(0).Costo_Opcion)     
    println ("Nuevo auto de color " + a1.Color + " Matricula " + a1.Matricula + " Con un valor de " + a1.Costo)
  
  
}
}

