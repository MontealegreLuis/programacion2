class Asignatura (a:String,b:String,c:String,d:String){
  
  val Nombreasig=a
  val Codigo=b
  val Descripcion=c
  val Departamento=d
 
  
    def Asignatura(a: String, b: String, c: String, d:String):Asignatura={
    new Asignatura (Nombreasig,Codigo,Descripcion,Departamento)
  } 
    def this(){
    this("","","","")
    }
    
    def Agregasignatura (x:Asignatura, y:Array[Profesor]):Asignatura={
   println ("Introduce nombre de la asignatura")
   var nom=readLine
   println ("Introduce el codigo ")
   var nss=readInt
   println ("Proporcione una descripcion de la asignatura")
   var dir=readLine
   println ("Seleccione el profesor encargado")
   for (x<-0 to y.length){
     println ("Seleccione")
   }
   
   new Asignatura (nom,nss,dir)
  }
    
   /*Para cada asignatura se mantiene su nombre, código, descripción y departamento.*/
}